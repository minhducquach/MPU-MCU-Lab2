#include "fsm_automatic.h"

void fsm_automatic_run(){
	switch (status){
	case INIT:
		status = AUTO_RED;
		setTimer(5000);
		break;
	case AUTO_RED:
		if (timer_flag == 1){
			status = AUTO_GREEN;
			setTimer(3000);
		}
		break;
	case AUTO_YELLOW:
		if (timer_flag == 1){
			status = AUTO_RED;
			setTimer(5000);
		}
		break;
	case AUTO_GREEN:
		if (timer_flag == 1){
			status = AUTO_YELLOW;
			setTimer(2000);
		}
		break;
	}
}

