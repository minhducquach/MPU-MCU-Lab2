#include "fsm_automatic.h"

void fsm_automatic_run(){
	switch (status){
	case INIT:
		status = AUTO_YELLOW;
		HAL_GPIO_WritePin(GPIOA, A_Pin, 1);
		HAL_GPIO_WritePin(GPIOA, B_Pin, 0);
		setTimer(5000);
		break;
	case AUTO_RED:
		if (timer_flag == 1){
			status = AUTO_GREEN;
			 HAL_GPIO_WritePin(GPIOA, A_Pin, 0);
			 HAL_GPIO_WritePin(GPIOA, B_Pin, 1);
			setTimer(3000);
		}
		break;
	case AUTO_YELLOW:
		if (timer_flag == 1){
			status = AUTO_RED;
			HAL_GPIO_WritePin(GPIOA, A_Pin, 1);
			HAL_GPIO_WritePin(GPIOA, B_Pin, 0);
			setTimer(5000);
		}
		break;
	case AUTO_GREEN:
		if (timer_flag == 1){
			status = AUTO_YELLOW;
			 HAL_GPIO_WritePin(GPIOA, A_Pin, 1);
			 HAL_GPIO_WritePin(GPIOA, B_Pin, 1);
			setTimer(2000);
		}
		break;
	}
}

